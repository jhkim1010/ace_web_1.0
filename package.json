{
  "name": "colibri-app",
  "version": "1.0.0",
  "description": "Colibri - User Authentication System",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd colibri_web_backend && npm install && cd ../colibri_web_frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd colibri_web_backend && npm start",
    "client": "cd colibri_web_frontend && npm start",
    "build": "cd colibri_web_frontend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["react", "nodejs", "express", "postgresql", "authentication"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 